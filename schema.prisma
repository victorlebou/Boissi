datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
  drinks    Drink[]   @relation("Drink_user")
}

model Drink {
  id               String    @id @default(cuid())
  size             Int
  type             String    @map("drink_type")
  createdAt        DateTime? @default(now())
  alcoolPercentage Int       @map("alcool_percentage")
  user             User?     @relation("Drink_user", fields: [userId], references: [id])
  userId           String?   @map("user")

  @@index([userId])
}
